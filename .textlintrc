{
  "filters": {
    "comments": true
  },
  "rules": {
    "terminology": {
      "defaultTerms": true,
      "exclude": [
        "bug[- ]fix(es)?",
        "walk-through"
      ],
      "terms": [
        ["bug[-]fix(es)?", "bug fix$1"],
        ["bugfix(es)?", "bug fix$1"],
        ["walkthrough", "walk-through"],
        ["ax(is)?[ ]?os", "AXIS OS"],
        ["artpec", "ARTPEC"],
        ["vapix", "VAPIX"],
        "ACAP application",
        "ACAP app",
        "ACAP documentation",
        "ACAP Native SDK",
        "ACAP SDK",
        ["ACAPs", "ACAP applications"], // Note that it doesn't cover single
                                        // use of ACAP instead of ACAP app or
                                        // ACAP application
        ["acap", "ACAP"]
      ]
    }
  }
}