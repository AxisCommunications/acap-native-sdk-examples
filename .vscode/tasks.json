{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "acap-native-sdk-examples: Run all linters",
      "type": "shell",
      "command": "cd ${workspaceFolder} && ./run-linters --all",
      "group": "lint",
      "problemMatcher": []
    },
    {
      "label": "acap-native-sdk-examples: Run super-linter",
      "type": "shell",
      "command": "cd ${workspaceFolder} && ./run-linters --super-linter",
      "group": "lint",
      "problemMatcher": []
    },
    {
      "label": "acap-native-sdk-examples: Run custom linter",
      "type": "shell",
      "command": "cd ${workspaceFolder} && ./run-linters --custom-linter",
      "group": "lint",
      "problemMatcher": []
    }
  ]
}
